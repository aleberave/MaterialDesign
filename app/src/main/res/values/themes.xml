<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">?superColor</item>
        <item name="colorPrimary">?superColor</item>
        <item name="colorOnPrimary">?superColor</item>
        <item name="colorPrimaryContainer">?superColor</item>
        <item name="colorOnPrimaryContainer">?superColor</item>
        <item name="colorPrimaryInverse">?superColor</item>
        <item name="colorSecondary">?superColor</item>
        <item name="colorOnSecondary">?superColor</item>
        <item name="colorSecondaryContainer">?superColor</item>
        <item name="colorOnSecondaryContainer">?superColor</item>
        <item name="colorTertiary">?superColor</item>
        <item name="colorOnTertiary">?superColor</item>
        <item name="colorTertiaryContainer">?superColor</item>
        <item name="colorOnTertiaryContainer">?superColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>

        <item name="tabStyle">@style/MyTabStyle</item>
        <item name="textAppearanceBody2">@style/MyTextAppearance</item>
        <item name="shapeAppearanceMediumComponent">@style/MyMediumShape</item>
    </style>

    <style name="MyRedStyle" parent="Theme.MaterialDesign">
        <item name="superColor">@color/red</item>
    </style>

    <style name="MyBlueStyle" parent="Theme.MaterialDesign">
        <item name="superColor">@color/blue</item>
    </style>

    <style name="MyGreenStyle" parent="Theme.MaterialDesign">
        <item name="superColor">@color/green</item>
    </style>

</resources>